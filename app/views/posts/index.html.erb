<h1>all The Small posts</h1>
<%= link_to "all the posts", controller: "posts" %>

</br>
</br>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to "Show", post %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to "Eliminate", post, :method => :delete %></td>

      </tr>
  <% end %>
</table>

</br>
</br>

<%= link_to 'New post', new_post_path %>